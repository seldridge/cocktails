% 90% of this stuff is ripped from Tom Toffoli's pack10.sty

 \headheight	30bp	% No header. These two parameters had been set by
 \headsep	0bp	%   \pagestyle, but we reset them to zero.
 \textheight	10in	% This leaves 11"-1/2"-1/4" = 10 1/4"" for the text.
 \footskip	.25in	% We reset this to 1/4".
 \topmargin	-0.5in	% We want 1/2" top and bot margins, w/ footer in margin

 \columnsep	1bp
 \textwidth	7.25in	% Leaves 1.25in of left+right margin, or 5/8" per side
 \oddsidemargin -.375in	% 5/8"-1"=-3/8"=-.375
 \evensidemargin-.375in

 \twocolumn
 \sloppy
 \flushbottom
 \parindent 1em
 \leftmargini 2em
 \leftmarginv .5em
 \leftmarginvi .5em
